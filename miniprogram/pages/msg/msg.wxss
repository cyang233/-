/* miniprogram/pages/msg/msg.wxss */
.message{
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: cornsilk;
}
.message .con{
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.message .con .img{
  width: 600rpx;
  height: 600rpx;
  margin-bottom: 20rpx;
}
.message .con text{
  font-size: 40rpx;
  color: aqua;
  font-weight: bold;
}