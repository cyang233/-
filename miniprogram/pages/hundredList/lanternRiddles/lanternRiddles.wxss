/* pages/hundredList/lanternRiddles/lanternRiddles.wxss */
.pagebox{
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx;
  background-color: #FFFFCC;
}
.btn{
  margin: 0 auto;
  width: 80%;
  height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  background-color: #CCFFFF;
  letter-spacing: 8rpx;
  color: #336699;
}
.result{
  box-sizing: border-box;
  padding: 24rpx;
  margin-top: 60rpx;
  width: 100%;
  height: 80vh;
  overflow-y: scroll;
  overflow-x: hidden;
  background-color: #FFCCCC;
  border-radius: 12rpx;
}
.title{
  margin-top: 80rpx;
  width: 100%;
  text-align: center;
  height: 60rpx;
  font-weight: bold;
  color: #6699CC;
  letter-spacing: 8rpx;
}

.answer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #CCFFCC;
  width: 180rpx;
  height: 180rpx;
  border-radius: 180rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  color: #666699;
}
.con{
  color:#6699CC;
  margin-top: 200rpx;
}