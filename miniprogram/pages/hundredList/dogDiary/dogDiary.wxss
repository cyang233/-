.pagebox {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx;
  background-color: #CC6633;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.content {
  margin-top: 120rpx;
  box-sizing: border-box;
  padding: 24rpx;
  width: 100%;
  height: 365rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  border-radius: 12rpx;
  background-color: #FFCC99;
  color: #006633;
  letter-spacing: 4rpx;
}

.btn {
  margin-top: 66rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #FFCC33;
  text-align: center;
  line-height: 88rpx;
  color: #CC6633;
  letter-spacing: 8rpx;
}