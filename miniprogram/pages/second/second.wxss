.rich {
  box-sizing: border-box;
  padding: 0 24rpx;
  width: 100%;
  height: 100vh;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ccc;
}

.rich .con {
  box-sizing: border-box;
  width: 100%;
}
.rich .con .lis{
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(255,255,255,.8);
}
.rich .con .li-t{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.rich .con .li-tl{
  font-size: 30rpx;
  color: #f30;
}
.rich .con .li-tl text{
  font-weight: 600;
}