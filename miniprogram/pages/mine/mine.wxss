/* miniprogram/pages/mine/mine.wxss */
.mine{
  width: 100%;
  height: 100vh;
}
.mine .info{
  box-sizing: border-box;
  padding: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1ED76D;
}
.mine .info .btn{
  position: relative;
  width: 210rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.talk{
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 88;
  position: absolute;
  left: 0;
  top: 0;
  width: 210rpx;
  height: 210rpx;
  border-radius: 210rpx;
  opacity: 0;
}
.mine .info text{
  padding-top: 10rpx;
  font-size: 28rpx;
  white-space: nowrap;
  letter-spacing: 8rpx;
  color: #fff;
}
/*内容*/
.mine .content{
  box-sizing: border-box;
  padding: 0 40rpx 92rpx 40rpx;
  width: 100%;
  overflow-y: scroll;
}
.mine .content .li{
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 0;
  margin: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx #ccc solid;
}
.mine .content .li-l{
  display: flex;
  align-items: center;
}
.mine .content .li-l text{
  font-size: 38rpx;
  padding-left: 10rpx;
}

